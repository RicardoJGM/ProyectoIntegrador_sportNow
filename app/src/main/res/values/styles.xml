<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/white</item>

        <!-- Define tu propio estilo del ActionBar -->
        <item name="android:actionBarStyle">@style/MyActionBarStyle</item>
    </style>

    <!-- Estilo personalizado para el ActionBar -->
    <style name="MyActionBarStyle" parent="Widget.AppCompat.ActionBar.Solid">
        <item name="android:titleTextStyle">@style/MyActionBarTitleText</item>
    </style>

    <!-- Estilo del texto del título del ActionBar -->
    <style name="MyActionBarTitleText" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@android:color/white</item>
        <!-- Otros atributos de texto según sea necesario -->
    </style>

</resources>